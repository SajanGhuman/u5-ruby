<h1>Products#index</h1>
<p>Find me in app/views/products/index.html.erb</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock Quantity</th>
      <th>Category</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |p| %>
      <tr>
        <td><%= link_to p.title, p %></td>
        <td>Description</td>
        <td><%= p.price %></td>
        <td><%= p.stock_quantity %></td>
        <td><%= p.category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>